{% extends 'BlageTaskBundle::layout.html.twig' %}
{% block body %}
<h3>TaskList edit</h3>

<form action="{{ path('tasklist_update', { 'id': entity.id , 'username': app.request.get('username')}) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('blage_task_default_index', { 'username': app.request.get('username')}) }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('tasklist_delete', { 'id': entity.id, 'username' : app.request.get('username') }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}